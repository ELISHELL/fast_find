    "plugins/**/*",
    "env.d.ts",
  ],
  "references": [
    {
      "path": "tsconfig.app.json"
    }
  ],
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": [
      "esnext",
